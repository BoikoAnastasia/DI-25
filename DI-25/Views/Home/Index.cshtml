@{
	ViewData["Title"] = "Home Page";
}

@using Di_25.Controllers
@model List<Product>

<div class="prosto">
	@foreach (var product in Model)
	{

		<section class="item">
			<div class="section_one_photo">
				<img src="/img/flower.jpg" alt="Фото товара" width="600" height="400">
			</div>
			<div class="section_one_text">
				<h3>@product.Name</h3>
				<h5>@product.Price</h5>
				<p>@product.Description</p>
				<a class="button" asp-controller="Home" asp-action="AddToCart" asp-route-productId="@product.Id">Добавить в корзину</a>
			</div>
		</section>
	}
</div>