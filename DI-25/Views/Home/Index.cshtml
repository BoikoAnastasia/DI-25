@{
    ViewData["Title"] = "Home Page";
}

@using Di_25.Controllers
@model List<Product>

<div class="nav">
@foreach (var product in Model)
{
	
        <section class="item">
			<div class="section_one_photo">
				<img src="/img/img1.gif" alt="Фото товара" width="600" height="400">
			</div>
			<div class="section_one_text">
				<h3>@product.Name</h3>
				<h5>@product.Price</h5>
				<p>@product.Description</p>
				<li>
					<a class="button" onclick="location.href='@Url.Action("Cart","Home")'">Добавить в корзину</a>
				</li>
			</div>
		</section>
}
</div>