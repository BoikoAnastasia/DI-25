@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}

@using Di_25.Controllers
@model List<Product>

<div class="catalog">
    @foreach (var product in Model)
    {

        if (product.Value != 0)
        {
            <div class="item">
                <div class="divimg">
                    <img src="/img/flower.jpg" />
                </div>
                <div class="text">
                    <h1>@product.Name</h1>
                    <p>@product.Description</p>
                </div>
                <h2>@product.Value</h2>
                <h2>@(product.Value * product.Price);</h2>
            </div>
        }
    }
    @if (ViewBag.kol == 0)
    {
        <h6 class="NoProduct">Товаров в корзине нет</h6>
    }

    <div></div>
    <div class="oplata">
        <div>
            <h2>К оплате: @ViewBag.TotalSum</h2>
            <div class="button">Оплатить</div>
        </div>
    </div>
</div>