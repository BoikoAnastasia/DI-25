@using Di_25.Controllers
@model Product
@{
    ViewBag.Title = "Подробности продукта";
}
<div class="van">
<div class="product-block">
        <div class="section_one_photo">
            <img src="/img/img1.gif" alt="Фото товара">
        </div>
        <div class="section_one_text">
            <h1>@Model.Name</h1>
            <h3>@Model.Price руб</h3>
            <p>@Model.Description</p>
            </div>
</div>
<div class="btns">
    <a class="button" onclick="location.href='@Url.Action("Index","Home")'">Продолжить покупки</a>
    <a href="#" class="button">Добавить в корзину</a>
    </div>
</div>